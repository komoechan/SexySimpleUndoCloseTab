{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.7",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "history",
    "storage",
    "favicon",
    "windows"
  ],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "open-most-recently-closed-tab": {
      "description": "Open most recently closed tab",
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z",
        "windows": "Ctrl+Shift+Z",
        "linux": "Ctrl+Shift+Z"
      }
    }
  }
}